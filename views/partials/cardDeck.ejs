<div class="mt-2 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-9">
    <% dramaList.forEach( (drama) => { %>
        <a href="/details/<%= drama.id %>">
            <div class="card inline-block">
                <div>
                    <div>
                        <!-- <img src="/images/d1.jpg" class="w-full h-32 sm:h-48 object-cover" alt="drama1_img"> -->
                        <!-- <img src="data:image/jpg;base64,<%= drama.image.data %>" -->
                        <img src="/all/image/<%= drama.id %>"
                            class="object-cover" 
                            alt="drama1_img"
                        >
                    </div>                        
                </div>
                <div>
                    <span class="text-base text-center block p-2 font-bold text-red-700">
                            <%= drama.title %>
                    </span>
                </div>
                <div class="badge">
                    <span class="material-icons">
                        task_alt
                    </span>
                    <span><%= drama.episodes %></span>
                </div>
            </div>
        </a>
    <% }) %>
</div>